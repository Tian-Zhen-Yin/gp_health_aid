<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.example.yangyang.gp_health_aid.view.SwipeMenuLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#FFF"
        android:clickable="true"
        app:ios="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/show"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:text="00:00"
                android:textSize="46sp" />

            <com.example.yangyang.gp_health_aid.view.SwitchView
                android:id="@+id/sw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                app:isOpened="true"
                />
        </RelativeLayout>


        <TextView
            android:id="@+id/tv_delete"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/layout_content"
            android:layout_alignTop="@+id/layout_content"
            android:layout_toRightOf="@+id/layout_content"
            android:background="#EE0B0C"
            android:gravity="center"
            android:text="删除"
            android:textColor="#DDFFFFFF" />
    </com.example.yangyang.gp_health_aid.view.SwipeMenuLayout>
</RelativeLayout>
